<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NFCEInkWriter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_darkest</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tan_darkest</item>
        <item name="colorSecondaryVariant">@color/tan_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        {/* --- 追加 --- */}
        <item name="materialAlertDialogTheme">@style/AppMaterialAlertDialogTheme</item>
    </style>

    {/*
    AppMaterialAlertDialogTheme と AppAlertDialogButton のスタイル定義は
    values/themes.xml にあるものがそのまま使われます。
    ナイトモードでこれらのスタイルを上書きしたい場合は、このファイル内に
    同名で再定義します。
    */}
</resources>
