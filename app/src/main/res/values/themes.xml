<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NFCEInkWriter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tan_light</item>
        <item name="colorSecondaryVariant">@color/tan_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        {/* --- ここから追加 --- */}
        {/* MaterialAlertDialogのテーマを指定 */}
        <item name="materialAlertDialogTheme">@style/AppMaterialAlertDialogTheme</item>
        {/* --- ここまで追加 --- */}
    </style>

    {/* --- ここから追加 --- */}
    {/* AlertDialogのボタンテキスト色をカスタマイズするためのテーマ */}
    <style name="AppMaterialAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        {/* Positiveボタン (例: OK) のスタイル */}
        <item name="buttonBarPositiveButtonStyle">@style/AppAlertDialogButton</item>
        {/* Negativeボタン (例: キャンセル) のスタイル */}
        <item name="buttonBarNegativeButtonStyle">@style/AppAlertDialogButton</item>
        {/* Neutralボタンのスタイル (もし使う場合) */}
        {/* <item name="buttonBarNeutralButtonStyle">@style/AppAlertDialogButton</item> */}
    </style>

    {/* AlertDialogのボタン共通スタイル (テキスト色を白に) */}
    <style name="AppAlertDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
        {/*
        注意: ボタンの背景色が明るい場合、白い文字は見えません。
        デフォルトのMaterialダイアログのボタン背景は透明に近いか、
        テーマの colorSurface に依存することが多いです。
        もし白い文字が見えにくい場合は、ボタンの背景色も変更する必要があります。
        例: ボタンの背景をプライマリカラーにする場合
        <item name="backgroundTint">?attr/colorPrimary</item>
        または特定の濃い色を指定
        <item name="backgroundTint">@color/blue_dark</item>
        */}
    </style>
    {/* --- ここまで追加 --- */}

    <!-- Progress Bar Styles -->
    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/white</item>
    </style>

    <!-- ▼▼▼ ここから新しいスタイルを追加 ▼▼▼ -->
    <style name="CompactButton" parent="Widget.MaterialComponents.Button">
        <!--
            親スタイルを Widget.MaterialComponents.Button に変更。
            TextButton にすると背景や枠線が最小限になりすぎる場合があるので、
            通常のボタンをベースにコンパクト化します。
            もし TextButton の見た目がよければ Widget.MaterialComponents.Button.TextButton にしてください。
        -->
        <item name="android:minWidth">80dp</item>
        <item name="android:paddingLeft">12dp</item> <!-- 少し広めのパディングから調整 -->
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetLeft">6dp</item> <!-- デフォルトのボタンインセットより小さく -->
        <item name="android:insetRight">6dp</item>
        <item name="android:insetTop">6dp</item>
        <item name="android:insetBottom">6dp</item>
        <!-- 必要に応じてテキストサイズも指定 -->
        <!-- <item name="android:textSize">14sp</item> -->
        <!-- <item name="android:textAppearance">?attr/textAppearanceButton</item> -->
    </style>
    <!-- ▲▲▲ ここまで新しいスタイルを追加 ▲▲▲ -->

</resources>

